<div
  class="modal fade"
  id="stockModalToggle{{id}}"
  aria-hidden="true"
  aria-labelledby="stockModalToggleLabel"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Stock</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <!-- form -->
        <form
          id="update-stock-form-{{id}}"
          onsubmit="submitStockForm(event, {{id}})"
          method="POST"
        >
          <div class="mt-3 bg-dark overflow-hidden">
            <div class="card-body bg-light">
              <div class="form-group">
                <label for="name">Slot</label>
                <input
                  type="text"
                  class="form-control"
                  id="stock-slot-{{id}}"
                  name="slot"
                  value="{{slot}}"
                />
              </div>
              <div class="form-group">
                <label for="name">Quantity</label>
                <input
                  type="number"
                  class="form-control"
                  id="stock-quantity-{{id}}"
                  name="Quantity"
                  value="{{quantity}}"
                />
              </div>
              <button
                id="stockUpdateBtn"
                type="submit"
                class="btn btn-primary mt-3"
              >Update</button>
              <button
                onclick="deleteStock(event, {{id}})"
                type="submit"
                class="btn btn-danger mt-3"
              >Delete</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>