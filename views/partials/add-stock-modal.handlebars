<div
  class="modal fade"
  id="addStockModalToggle"
  aria-hidden="true"
  aria-labelledby="addStockModalToggleLabel"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Stock</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <!-- form -->

        <form
          id="add-stock-form"
          onsubmit="addStock(event, {{user_id}})"
          method="POST"
        >
          <div class="bg-dark overflow-hidden">
            <div class="card-body bg-light">
              <div class="form-group">
                <label for="name">Slot</label>
                <input
                  type="text"
                  class="form-control"
                  id="add-stock-slot"
                  name="slot"
                  value="{{slot}}"
                />
              </div>
              <div class="form-group">
                <label for="name">Quantity</label>
                <input
                  type="number"
                  class="form-control"
                  id="add-stock-quantity"
                  name="Quantity"
                  value="{{quantity}}"
                />
              </div>
              <button
                id="stockAddBtn"
                type="submit"
                class="btn btn-primary mt-3"
              >Submit</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>