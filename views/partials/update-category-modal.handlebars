<div
  class="modal fade"
  id="updateCategoryModalToggle"
  aria-hidden="true"
  aria-labelledby="updateCategoryModalToggleLabel"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Category</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <!-- form -->
        <form
          id="update-category-form"
          onsubmit="updateCategory(event)"
          method="PUT"
        >
          <div class="mt-3 bg-dark overflow-hidden">
            <div class="card-body bg-light">
              <div class="form-group">
                <label for="name">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="update-category-name"
                  name="name"
                  value="{{name}}"
                />
              </div>
              <button
                id="stockUpdateBtn"
                type="submit"
                class="btn btn-primary mt-3"
              >Update</button>
              <button
                onclick="deleteCategory(event)"
                type="submit"
                class="btn btn-danger mt-3"
              >Delete</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>