<div class="flex-grow-1 d-flex my-4">
  <div class="flex-grow-1 d-flex justify-content-center align-items-center">
    <div
      class="col-11 col-sm-9 col-md-6 col-lg-5 col-xl-4 p-5 bg-light rounded shadow"
    >
      <form class="new-supplier-form" user_data="{{user_id}}">

        <div class="form-outline mb-4 text-center">
          <h1>Add New Supplier</h1>
        </div>

        <div class="form-outline mb-4">
          <input
            type="text"
            id="new-supplier-name"
            placeholder="Name"
            class="form-control"
          />
        </div>
        <div class="form-outline mb-4">
          <input
            type="text"
            id="new-supplier-email"
            placeholder="Email"
            class="form-control"
          />
        </div>
        <div class="form-outline mb-4">
          <input
            type="tel"
            id="new-supplier-number"
            placeholder="Phone Number"
            name="phone"
            pattern="[0-9]{10}"
            class="form-control"
          />
        </div>
        <div class="form-outline mb-4">
          <input
            type="text"
            id="new-supplier-address"
            placeholder="Address"
            class="form-control"
          />
        </div>
        <div class="form-outline mb-4">
          <input
            type="text"
            id="new-supplier-city"
            placeholder="City"
            class="form-control"
          />
        </div>

        <div class="form-outline mb-4">
          <input
            type="text"
            id="new-supplier-state"
            placeholder="State"
            class="form-control"
          />
        </div>
        <div class="form-outline mb-4">
          <input
            id="new-supplier-zip"
            placeholder="ZIP"
            class="form-control"
            name="zip"
            type="number"
            inputmode="numeric"
          />
        </div>
        <!-- Submit button -->
        <button
          type="submit"
          class="btn btn-primary col-12 mb-4"
        >Submit</button>
      </form>
    </div>
  </div>
</div>

<script src="/javascript/supplier.js"></script>