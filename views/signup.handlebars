<div class="flex-grow-1 d-flex">
  <div class="flex-grow-1 d-flex justify-content-center align-items-center">
  <div class="col-10 col-sm-9 col-md-6 col-lg-5 col-xl-4 p-5 bg-light rounded shadow">
    <form id="signup-form" class="register-form">
        <!-- username input -->
        <div class="form-outline mb-4">
        <input type="text" id="username-signup" placeholder="Username" class="form-control" />
      </div>
      <!-- Email input -->
      <div class="form-outline mb-4">
        <input type="email" id="email-signup" placeholder="Email address" class="form-control" />
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <input type="password" id="password-signup" placeholder="Password" class="form-control" />
      </div>
      <!-- Submit button -->
      <button type="submit" class="btn btn-primary col-12 mb-4">Register</button>

      <!-- Register buttons -->
      <div class="text-center">
        <p>Have already an account? <a href="/login">Login here</a></p>
      </div>
    </form>
  </div>
</div>
</div>

<script src="/javascript/signup.js"></script>