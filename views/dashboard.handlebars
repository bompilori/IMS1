<div class="d-flex bg-light mb-2">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-12 col-md-6 my-4">
                    <h2>{{ title }}</h2>
                </div>
                <div class="col-12 col-md-6 my-2">
                    <div class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Content -->
<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4 mb-2">
      <div class="card">
        <div class="card-header position-relative">
            {{#if isCategory}}
          <h3>Categories</h3>
            {{else}}
            <h3>Product</h3>
                {{/if}}
          <!-- edit category button -->
          <a class="category position-absolute" href="/edit-category">
            <i class="fs-4 fa-solid fa-pen-to-square text-primary"></i>
          </a>
        </div>
        <ul class="list-group list-group-flush">
            {{#if isProduct}}
            {{> product-details-by-id product}}
            {{else}}
          {{#each categories as |category|}}
          {{> category-details category}}
          {{/each}}
            {{/if}}
        </ul>
      </div>
    </div>
    <div class="col-12 col-lg-8 d-flex justify-content-center mb-3">
      <div class="card border w-100">
        <div class="card-header position-relative">
          <h3>Products</h3>
          <a class="product position-absolute" href="/edit-product">
            <i class="fs-4 fa-solid fa-pen-to-square text-primary"></i>
          </a>
        </div>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Unit</th>
                <th scope="col">Inventory</th>
              </tr>
            </thead>
            <tbody>
                {{#each products as |product|}}
                {{> product-details product=product index=@index}}
                {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>